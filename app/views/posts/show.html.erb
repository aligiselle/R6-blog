<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div id ="comments">
<% if @post.comments.present? %>
  <h1>Comments</h1>
  <%= render @post.comments %>
<% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
